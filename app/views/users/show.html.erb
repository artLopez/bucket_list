<div id="wrapper">
	<%= render 'layouts/sidebar' %>
	<div id="page-content-wrapper">
		<div class="container-fluid">

			<% if @user != nil && session[:user_id] == @user[0][:id] %>
			    <h1 style = "padding-top: 50px">Welcome to your Profile <%= session[:name] %>!</h1>
			<% else %>
			    <h1>Profile <%= @user[0][:first_name] << ' ' << @user[0][:last_name] %></h1>
			<% end %>

			<% if @event.any? %>
			     <%= render 'events/events' %>
			<% elsif @event.count == 0 && @user.any?%>
			    <h1>No events set</h1>
			<% end %>

			<% if @current_user == nil && @user.count != 0 %>
			    <%= link_to 'Back', users_path, :class => 'btn btn-large btn-primary'%>
			    <% elsif @current_user != nil && session[:user_id] != @user[0][:id] %>
			     <%= link_to 'Back', users_path, :class => 'btn btn-large btn-primary'%>
			<% end %>

		</div>
	</div>
</div>



