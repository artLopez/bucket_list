<%= render 'layouts/header' %>
<div class="signup-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3>Sign Up</h3>
        <%= form_for :users, url: users_path do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <p>Woah there...</p>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
              <li><b><%= msg %></b></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group signup-form-group">
          <%= f.label :first_name, "First Name",  class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, class: 'form-control signup-form-control' %>
          </div>
        </div>
        <div class="form-group signup-form-group">
          <%= f.label :last_name, "Last Name",  class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, class: 'form-control signup-form-control' %>
          </div>
        </div>
        
        <div class="form-group signup-form-group">
          <%= f.label :username, "User Name",  class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class: 'form-control signup-form-control' %>
          </div>
        </div>
        <div class="form-group signup-form-group">
          <%= f.label :password, "Password", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: 'form-control signup-form-control' %>
          </div>
        </div>
        <div class="form-group signup-form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Create my Account", class: "btn btn-lg btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>