<%= render 'layouts/header' %>
<div class="login-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">

        <h3>Login</h3>
        <%= form_for(:session, url: login_path) do |f| %>
          
          <div class="form-group login-form-group">
            <%= f.label :username, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :username, class: 'form-control login-form-control' %>
            </div>
          </div>

          <div class="form-group login-form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control login-form-control' %>
            </div>
          </div>

          <div class="form-group login-form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Log in", class: "btn btn-lg btn-success" %>
            </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>